<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ColoredButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">@color/amber900</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="OrangeButton" parent="ColoredButton">
        <item name="android:colorButtonNormal">@color/amber900</item>
    </style>

    <style name="GreenButton" parent="ColoredButton">
        <item name="android:colorButtonNormal">@color/green800</item>
    </style>

    <style name="GreyButton" parent="ColoredButton">
        <item name="android:colorButtonNormal">@color/grey400</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="UnderlinedText">
        <item name="android:textColor">@color/deepPurple900</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
